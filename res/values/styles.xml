<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SingleLineText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HeaderStyle" parent="SingleLineText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsStyle" parent="SingleLineText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/details_text_size</item>
    </style>

    <style name="CategoryStyle" parent="SingleLineText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/category_text_size</item>
    </style>

</resources>